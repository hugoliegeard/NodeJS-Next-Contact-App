<div class="p-3 mx-auto text-center">
    <h1 class="display-4">Ajouter un Contact</h1>
</div>

<div class="py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="card shadow-sm p-4">
                    <form method="post">

                        <!-- Prénom -->
                        <div class="form-group">
                            <label>Prénom</label>
                            <input class="form-control"
                                   name="prenom" placeholder="Prénom." type="text">
                            <small class="form-text text-muted">
                                Saisissez le prénom du contact.
                            </small>
                        </div>

                        <!-- Nom -->
                        <div class="form-group">
                            <label>Nom</label>
                            <input class="form-control"
                                   name="nom" placeholder="Nom." type="text">
                            <small class="form-text text-muted">
                                Saisissez le nom du contact.
                            </small>
                        </div>

                        <!-- Email -->
                        <div class="form-group">
                            <label>Email</label>
                            <input class="form-control"
                                   name="email" placeholder="Email." type="text">
                            <small class="form-text text-muted">
                                Saisissez l'Email du contact.
                            </small>
                        </div>

                        <!-- Téléphone -->
                        <div class="form-group">
                            <label>Téléphone</label>
                            <input class="form-control"
                                   name="tel" placeholder="Téléphone." type="tel">
                            <small class="form-text text-muted">
                                Saisissez le numéro de téléphone du contact.
                            </small>
                        </div>

                        <!-- Submit -->
                        <button class="btn btn-block btn-dark">
                            <i class="fas fa-plus-circle"></i>
                            Ajouter le Contact
                        </button>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
